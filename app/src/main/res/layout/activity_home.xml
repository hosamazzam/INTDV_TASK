<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Spinner
        android:id="@+id/address_spin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="110dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="110dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/round_btn_gray_4dp"
        android:entries="@array/address_list" />

    <TextView
        android:id="@+id/logout"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:background="@drawable/round_btn_accent_4dp"
        android:gravity="center"
        android:text="Log out"
        android:textColor="@color/white" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="60dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/navigate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:alpha="0.3"
            android:background="@drawable/round_btn_accent_4dp"
            android:gravity="center"
            android:text="Navigation"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/save"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:alpha="0.3"
            android:background="@drawable/round_btn_blue_4dp"
            android:gravity="center"
            android:text="Save"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/clear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:alpha="0.3"
            android:background="@drawable/round_btn_gray_4dp"
            android:gravity="center"
            android:text="Clear"
            android:textColor="@color/black" />
    </LinearLayout>
</RelativeLayout>